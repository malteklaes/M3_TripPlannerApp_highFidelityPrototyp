<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/deleteAlert">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/delete_alert_dialog"
        android:orientation="vertical">

        <TextView
            android:id="@+id/DeleteWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="5dp"
            android:text="Warning"
            android:textColor="#FF0000"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/deleteWarningInformation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:text="Are you sure that you want to remove the bookmark?"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/deleteNo"
                android:layout_width="180dp"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#FF0000"
                android:text="NO" />

            <Button
                android:id="@+id/deleteYes"
                android:layout_width="180dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#00FF00"
                android:text="YES" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>